        <texPath>Things/Pawn/Kagune/Rinkaku</texPath>
        <parentTagDef>Body</parentTagDef>
        <drawData>
          <defaultData><layer>-2</layer></defaultData>
          <dataNorth><layer>80</layer></dataNorth>
        </drawData>
        <baseScale>1.6</baseScale>
      </li>
    </renderNodeProperties>
  </GeneDef>

